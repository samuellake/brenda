var Twitter = require('twitter');
var Sentencer = require('./sentencerHelper.js');
var Gramophone = require('gramophone');

var client = new Twitter({

});

client.get('search/tweets', {q: 'clinton', count: '100'}, function(error, tweets, response){
    console.log(tweets.search_metadata);

    var text;
   for(var i = 0; i < tweets.statuses.length; i++){
     console.log(tweets.statuses[i].text);
     text += tweets.statuses[i].text;
   }

   console.log(Gramophone.extract(text, {score: true}));
});

module.exports = function(){
    var item1 = Sentencer.make("{{a_noun}}");
    var item2 = Sentencer.make("{{presentVerb}}");

    return(`Id like to sit on ${item1} and start ${item2}`);
}